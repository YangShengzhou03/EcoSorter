{
  "name": "eco-sorter-mobile",
  "version": "1.0.0",
  "description": "智能垃圾分类督导系统移动端应用",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace EcoSorter.xcworkspace -scheme EcoSorter -configuration Release",
    "build:apk": "cd android && ./gradlew assembleRelease",
    "build:aab": "cd android && ./gradlew bundleRelease"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.0",
    "@react-navigation/native": "^6.1.0",
    "@react-navigation/stack": "^6.3.0",
    "@react-navigation/bottom-tabs": "^6.5.0",
    "axios": "^1.4.0",
    "zustand": "^4.3.0",
    "react-native-camera": "^4.2.1",
    "react-native-image-picker": "^4.10.0",
    "react-native-maps": "^1.3.2",
    "react-native-svg": "^13.4.0",
    "react-native-vector-icons": "^9.2.0",
    "react-native-reanimated": "^3.3.0",
    "react-native-gesture-handler": "^2.12.0",
    "react-native-safe-area-context": "^4.6.0",
    "@react-native-community/datetimepicker": "^7.0.0",
    "react-native-qrcode-scanner": "^1.5.0",
    "react-native-permissions": "^3.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.0",
    "@tsconfig/react-native": "^2.0.0",
    "@types/jest": "^29.0.0",
    "@types/react": "^18.0.0",
    "@types/react-native": "^0.72.0",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.0.0",
    "eslint": "^8.19.0",
    "jest": "^29.0.0",
    "metro-react-native-babel-preset": "0.76.0",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "^4.8.0"
  },
  "jest": {
    "preset": "react-native"
  }
}