/* pages/index/index.wxss */

.container {
  background-color: #f8fafc;
  min-height: 100vh;
  padding: 0;
}

/* 顶部横幅 */
.banner {
  position: relative;
  height: 300rpx;
  overflow: hidden;
  border-radius: 0 0 32rpx 32rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-content {
  position: absolute;
  bottom: 40rpx;
  left: 32rpx;
  color: white;
}

.banner-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.banner-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 功能网格 */
.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 32rpx;
  margin-top: -40rpx;
}

.card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.card:active {
  transform: scale(0.98);
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #6b7280;
}

/* 快速操作按钮 */
.quick-action {
  padding: 0 32rpx 32rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #10B981, #3B82F6);
  color: white;
  border-radius: 50rpx;
  padding: 28rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.btn-primary:active {
  opacity: 0.9;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

/* 数据统计卡片 */
.stats-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin: 0 32rpx 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.stats-date {
  font-size: 24rpx;
  color: #6b7280;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #10B981;
  display: block;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}