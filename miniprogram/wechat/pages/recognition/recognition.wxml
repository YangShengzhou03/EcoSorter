<!--pages/recognition/recognition.wxml-->
<view class="container">
  <!-- 摄像头区域 -->
  <view class="camera-container">
    <camera 
      device-position="back" 
      flash="off" 
      class="camera"
      binderror="cameraError"
    >
      <view class="camera-overlay">
        <view class="scan-frame">
          <view class="scan-line"></view>
        </view>
        <text class="scan-tip">将垃圾放入框内识别</text>
      </view>
    </camera>
  </view>

  <!-- 操作按钮 -->
  <view class="action-buttons">
    <button class="btn btn-capture" bindtap="takePhoto">
      <image class="btn-icon" src="/images/icon-capture.png"></image>
    </button>
    
    <button class="btn btn-switch" bindtap="switchCamera">
      <image class="btn-icon" src="/images/icon-switch.png"></image>
    </button>
    
    <button class="btn btn-flash" bindtap="toggleFlash">
      <image class="btn-icon" src="/images/icon-flash-off.png"></image>
    </button>
  </view>

  <!-- 识别结果弹窗 -->
  <view class="modal" wx:if="{{showResult}}">
    <view class="modal-content">
      <view class="modal-header">
        <text class="modal-title">识别结果</text>
        <button class="btn-close" bindtap="closeModal">×</button>
      </view>
      
      <view class="result-content">
        <image class="result-image" src="{{photoPath}}" mode="aspectFit"></image>
        
        <view class="result-info">
          <text class="result-type">{{result.type}}</text>
          <text class="result-confidence">置信度: {{result.confidence}}%</text>
          
          <view class="result-tips">
            <text class="tips-title">投放指南:</text>
            <text class="tips-content">{{result.tips}}</text>
          </view>
        </view>
      </view>
      
      <view class="modal-actions">
        <button class="btn btn-secondary" bindtap="retakePhoto">重新拍摄</button>
        <button class="btn btn-primary" bindtap="confirmResult">确认结果</button>
      </view>
    </view>
  </view>

  <!-- 加载状态 -->
  <view class="loading" wx:if="{{isLoading}}">
    <view class="loading-spinner"></view>
    <text class="loading-text">识别中...</text>
  </view>
</view>