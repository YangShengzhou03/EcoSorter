# Environment variables for Eco Sorter Frontend

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_TIMEOUT=10000

# Application Configuration
VITE_APP_NAME="Eco Sorter"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="智能垃圾分类督导系统"

# Authentication Configuration
VITE_AUTH_TOKEN_KEY=eco_sorter_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=eco_sorter_refresh_token
VITE_AUTH_TOKEN_EXPIRY=3600

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MAINTENANCE=false

# Third-party Services
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_STRIPE_PUBLISHABLE_KEY=

# Upload Configuration
VITE_MAX_UPLOAD_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# PWA Configuration
VITE_PWA_ENABLED=true
VITE_PWA_NAME="Eco Sorter"
VITE_PWA_SHORT_NAME="EcoSorter"

# Development Configuration
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HOST=localhost

# Build Configuration
VITE_SOURCEMAP=true
VITE_MINIFY=true

# Internationalization
VITE_DEFAULT_LANGUAGE=zh-CN
VITE_SUPPORTED_LANGUAGES=zh-CN,en-US

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_AVAILABLE_THEMES=light,dark,system

# Notification Configuration
VITE_NOTIFICATION_TIMEOUT=5000
VITE_NOTIFICATION_POSITION=top-right

# Cache Configuration
VITE_CACHE_ENABLED=true
VITE_CACHE_DURATION=300000

# Performance Configuration
VITE_LAZY_LOADING_ENABLED=true
VITE_IMAGE_OPTIMIZATION=true

# Security Configuration
VITE_CSP_ENABLED=true
VITE_XSS_PROTECTION=true

# Monitoring Configuration
VITE_PERFORMANCE_MONITORING=true
VITE_ERROR_TRACKING=true