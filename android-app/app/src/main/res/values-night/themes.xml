<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for night mode. -->
    <style name="Base.Theme.EcoSorter" parent="Theme.Material3.DayNight">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_primary_dark</item>
        
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/text_primary_dark</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Material3 specific attributes -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.EcoSorter</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.EcoSorter.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.EcoSorter.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.EcoSorter.Large</item>
    </style>

    <style name="Theme.EcoSorter" parent="Base.Theme.EcoSorter" />

    <!-- Theme overlay for Material3 components in dark mode -->
    <style name="ThemeOverlay.EcoSorter" parent="">
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimaryContainer">@color/primary_light</item>
        <item name="colorSecondaryContainer">@color/secondary_dark</item>
        <item name="colorOnSecondaryContainer">@color/secondary_light</item>
    </style>

    <!-- Widget styles for dark mode -->
    <style name="Widget.EcoSorter.Button.Secondary" parent="Widget.EcoSorter.Button.Primary">
        <item name="android:backgroundTint">@color/surface_dark</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="Widget.EcoSorter.Card" parent="Widget.Material3.Card">
        <item name="cardElevation">2dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.EcoSorter.Medium</item>
        <item name="cardBackgroundColor">@color/surface_dark</item>
    </style>
</resources>