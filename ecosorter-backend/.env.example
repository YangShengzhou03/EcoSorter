# EcoSorter Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ecosorter

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_REFRESH_EXPIRE=30d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@ecosorter.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# AI Model Configuration
MODEL_PATH=models/waste-classification
MODEL_VERSION=v1.0.0
PREDICTION_THRESHOLD=0.8

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=logs

# Redis Configuration (optional, for session management)
REDIS_URL=redis://localhost:6379

# External Services
WEATHER_API_KEY=your-weather-api-key
MAPS_API_KEY=your-maps-api-key

# System Configuration
SYSTEM_NAME=EcoSorter
SYSTEM_VERSION=1.0.0
ADMIN_EMAIL=admin@ecosorter.com